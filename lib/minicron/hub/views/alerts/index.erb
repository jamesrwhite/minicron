<header class="clearfix">
  <h2 class="pull-left">Alerts</h2>
</header>
<hr/>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Job</th>
      <th>Kind</th>
      <th>Medium</th>
      <th>Sent</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><a href="<%= "#{Minicron::Transport::Server.get_prefix}/alert/#{alert.id}" %>"><%= alert.id %></a></td>
        <td><a href="<%= "#{Minicron::Transport::Server.get_prefix}/job/#{alert.job.id}" %>"><%= alert.job.name %></a></td>
        <td><%= alert.kind %></td>
        <td><%= alert.medium %></td>
        <td><%= alert.sent_at %></td>
        <td>
          <a href="<%= "#{Minicron::Transport::Server.get_prefix}/alert/#{alert.id}" %>" class="btn btn-xs btn-info">View</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
