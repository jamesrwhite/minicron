<!doctype html>
<html>
<head>
  <%= css :app, :media => 'screen' %>
  <title>minicron</title>
</head>
<body>
  <%= erb :'partials/header' %>

  <div class="main-container clearfix">
    <% if flash[:success] %>
      <div class="flash alert alert-success" role="alert"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:warning] %>
      <div class="flash alert alert-warning" role="alert"><%= flash[:warning] %></div>
    <% end %>
    <% if flash[:error] %>
      <div class="flash alert alert-danger" role="alert"><%= flash[:error] %></div>
    <% end %>
    <%= erb :'partials/sidebar' %>

    <div class="main-panel">
      <div class="inner">
        <%= yield %>
      </div>
    </div>
  </div>

  <%= js :app, :media => 'screen' %>
  <script>
    window.Minicron.config = {
      path: '<%= Minicron.config['server']['path'] %>'
    };
    window.Minicron.Pusher = {
      enabled: <%= Minicron.config['client']['pusher']['enabled'] ? 'true' : 'false' %>,
      client:  <%= Minicron.config['client']['pusher']['enabled'] ? "new Pusher('#{Minicron.config['client']['pusher']['key']}')" : 'null' %>,
      encrypted: <%= Minicron.config['client']['pusher']['encrypted'] %>
    };
  </script>
</body>
</html>
